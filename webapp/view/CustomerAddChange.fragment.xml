<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormChange001wide"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Create Customer"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
			<f:content>
				<Label text="Customer ID" />
				<Input value="CUST00122" enabled="false" />
                <Button icon="sap-icon://edit" type="Emphasized" >
                <layoutData>
						<l:GridData span="XL1 L1 M1 S6" />
					</layoutData>
                </Button>
                <Button icon="sap-icon://refresh" type="Emphasized" >
                <layoutData>
						<l:GridData span="XL1 L1 M1 S6" />
					</layoutData>
                </Button>

                <Label text="Company Name" />
                <Input value="Adelco Labs Pvt. Ltd.">
                </Input>

				<Label text="Contact Person Name" />
				<Input value="John Doe" enabled="false" />                          
				<Button icon="sap-icon://add" >
                
                </Button>
			</f:content>
		</f:SimpleForm>

        <f:SimpleForm id="SimpleFormChange002wide"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Company Address"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
			<f:content>
				 
                <Label text="Street Address 1" />
                <Input value="" placeholder="Street Address line 1" >
                </Input>    

                <Label text="Street Address 2" />
                <Input value="" placeholder="Street Address line 2" >
                </Input>                    

				<Label text="City and ZIP code" />
				<Select selectedKey="Vadodara">
					<items>
						<core:Item text="Vadodara" key="Vadodara"/>
						<core:Item text="Mumbai" key="Mumbai"/>
						<core:Item text="Gurgaon" key="Gurgaon"/>
					</items>
				</Select>
				<Input value="" placeholder="710003">
                <layoutData>
						<l:GridData span="XL1 L2 M2 S4" />
					</layoutData>
                </Input>                
                
				<Label text="State and Country" />
				<Select selectedKey="Gujarat">
					<items>
						<core:Item text="Maharashtra" key="Maharashtra"/>
						<core:Item text="Delhi" key="Delhi"/>
						<core:Item text="Gujarat" key="Gujarat"/>
					</items>
				</Select>
                <Select selectedKey="India">
					<items>
						<core:Item text="England" key="England"/>
						<core:Item text="Germany" key="Germany"/>
						<core:Item text="India" key="India"/>
					</items>
				</Select>
			</f:content>
		</f:SimpleForm>

        <f:SimpleForm id="SimpleFormChange003wide"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Customer Document"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
			<f:content>
				 
                <Label text="Link Document" />
                <Input value="Doucument Name" placeholder="Doucument Name" enabled="false" >
                </Input>  
                <Button icon="sap-icon://upload-to-cloud" type="Accept" >
                <layoutData>
						<l:GridData span="XL1 L1 M1 S12" />
					</layoutData>
                </Button>

                <Label text="Requisition Number and Date" />
                <Input enabled="false" value="REQAUTO0013" >
                </Input>  
                <Input enabled="false" value="dd/MM/YYYY" >
                <layoutData>
						<l:GridData span="XL1 L2 M2 S12" />
					</layoutData>
                </Input>

                <Label text="Document Reference Date" />
                <DatePicker />
                <!-- <Input enabled="false" value="dd/MM/YYYY" >
                <layoutData>
						<l:GridData span="XL1 L2 M2 S4" />
					</layoutData>
                </Input> -->

                <Label text="Date of Receipt" />
                <DatePicker />
                <!-- <Input enabled="false" value="dd/MM/YYYY" >
                <layoutData>
						<l:GridData span="XL1 L2 M2 S4" />
					</layoutData>
                </Input> -->
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>