<mvc:View 
xmlns:html="http://www.w3.org/1999/xhtml" 
xmlns:mvc="sap.ui.core.mvc" 
xmlns="sap.m" 
xmlns:l="sap.ui.layout"
xmlns:f="sap.ui.layout.form"
controllerName="com.limscloud.app.controller.CustomerAdd" 
displayBlock="true">
	<App id="CustomerDashboardApp">
		<pages>
			<Page
				id="page"
				showHeader="true" >	
				<content>
				<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormDisplay001wide"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Display Customer"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
			<f:content>
				<Label text="Full name of the contact" />
				<Text id="nameText" text="{SupplierName}" />
				<Label text="Street and number where the contact is located" />
				<Text id="streetText" text="{Street}"  /><Text id="HouseNumberText" text="{HouseNumber}"  />
				<Label text="ZIP Code and City" />
				<Text id="zipText" text="{ZIPCode}"  /><Text id="cityText" text="{City}"  />
				<Label text="Country where the contact is located" />
				<Text id="countryText" text="{Country}" />
			</f:content>
		</f:SimpleForm>
	</VBox>

				</content>
				<headerContent>
					<Button id="edit" icon="sap-icon://add-document" tooltip="Create" press="handleEditPress" />
					<Button id="cancel" icon="sap-icon://sys-cancel-2" tooltip="Cancel" visible="false" press="handleCancelPress" />
				</headerContent>		
				<footer>
					<Bar>
						<contentRight>
							<!-- <Button id="edit" text="New Customer" enabled="true" press="handleEditPress" type="Accept"/> -->
							<Button id="save" icon="sap-icon://save" tooltip="Create" press="handleSavePress" visible="false"/>
							<!-- <Button id="save" text="Create Customer" type="Emphasized" visible="false" press="handleSavePress" /> -->
							<!-- <Button id="cancel" text="Cancel" visible="false" press="handleCancelPress" /> -->
						</contentRight>
					</Bar>
				</footer>
		</Page>
		</pages>
	</App>
</mvc:View>