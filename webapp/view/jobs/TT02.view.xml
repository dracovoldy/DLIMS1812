<mvc:View controllerName="com.limscloud.app.controller.jobs.TT02" displayBlock="true" height="100%" 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form">
	<NavContainer id="TT02">


		<pages>
			<Page id="page0" showHeader="true" showFooter="false" class="sapUiSizeCompact" title="TT02 - Perform Job" showNavButton="true" navButtonPress="onNavBack">
				<content>

					<Table id="jobHeaderTable" inset="false" items="{jobsModel>/lookups/jobHeader}" mode="SingleSelectLeft" selectionChange="_navToDetail">
						<headerToolbar>
							<OverflowToolbar>
								<content>
									<Title text="Jobs" />
									<ToolbarSpacer />

								</content>
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="4em">
								<Text text="Job #" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="4em">
								<Text text="Lab ID" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="4em">
								<Text text="Lab" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="4em">
								<Text text="Order" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="4em">
								<Text text="Customer" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="4em">
								<Text text="Group" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="4em">
								<Text text="Created By" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="4em">
								<Text text="Created At" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="4em">
								<Text text="Approver" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="4em">
								<Text text="Approved At" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="4em">
								<Text text="Status" />
							</Column>


						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{jobsModel>jobId}" />
									<Text text="{jobsModel>labId}" />
									<Text text="{jobsModel>labName}" />
									<Text text="{jobsModel>orderId}" />
									<Text text="{jobsModel>custName}" />
									<Text text="{jobsModel>groupName}" />
									<Text text="{jobsModel>createdBy}" />
									<Text text="{ path: 'jobsModel>createdAt', formatter: '.formatter.formatDateTime'}" />
									<Text text="{jobsModel>appvId}" />
									<Text text="{ path: 'jobsModel>appvAt', formatter: '.formatter.formatDateTime'}" />
									<Text text="{jobsModel>status}" />

									
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer>

				</footer>
			</Page>

		</pages>
	</NavContainer>
</mvc:View>