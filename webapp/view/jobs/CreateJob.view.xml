<mvc:View controllerName="com.limscloud.app.controller.jobs.CreateJob" displayBlock="true" height="100%" 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form">
	<App id="CreateJob">
		<pages>
			<Page id="page0" showHeader="true" showFooter="false" class="sapUiSizeCompact" title="TT01 - Create Job" showNavButton="true" navButtonPress="onNavBack">
				<content>
					<f:SimpleForm id="createJobHeaderSimpleForm1" editable="true" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="4" ariaLabelledBy="title1">
						<f:toolbar>
							<Toolbar id="TB1">
								<Title id="Title1" text="Job Header" level="H4" titleStyle="H4"/>
								<ToolbarSpacer />
								<Button text="Create Items" type="Accept" press="_createItemBtnPress"/>
							</Toolbar>
						</f:toolbar>
						<f:content>

							<Label text="Job Description" required="true" />
							<Input id="headDesc" value="{jobsModel>/createJob/header/jobDesc}" placeholder="Description" />
							<Label text="Order #" required="true"/>
							<Input id="headOrder" valueHelpOnly="true" showValueHelp="true" valueHelpRequest="_loadOrder" placeholder="Select Order">
							</Input>
							<Label text="Lab" required="true"/>
							<ComboBox id="headLab" items="{jobsModel>/lookups/labs}" placeholder="Select Lab" showSecondaryValues= "true" filterSecondaryValues="true">
								<core:ListItem key="{jobsModel>labId}" text="{jobsModel>labId}" additionalText="{jobsModel>labName}" />
							</ComboBox>
							<Label text="Test Group" required="true"/>
							<ComboBox id="headTestGroup" items="{jobsModel>/lookups/testGroups}" placeholder="Select Lab" showSecondaryValues= "true" filterSecondaryValues="true">
								<core:ListItem key="{jobsModel>GPIX}" text="{jobsModel>NAME}" additionalText="{jobsModel>DESC}"/>
							</ComboBox>
							<Label text="Issued By" required="true"/>
							<ComboBox id="headIssuer" items="{jobsModel>/lookups/users}" placeholder="Select Issuer" showSecondaryValues= "true" filterSecondaryValues="true">
								<core:ListItem key="{jobsModel>userId}" text="{jobsModel>userId}" additionalText="{jobsModel>fullname}" />
							</ComboBox>
							<Label text="Assign Approver" required="true"/>
							<ComboBox id="headApprover" items="{jobsModel>/lookups/users}" placeholder="Select Approver" showSecondaryValues= "true" filterSecondaryValues="true">
								<core:ListItem key="{jobsModel>userId}" text="{jobsModel>userId}" additionalText="{jobsModel>fullname}" />
							</ComboBox>

						</f:content>
					</f:SimpleForm>

					<Table id="jobItemsTable" inset="false" items="{jobsModel>/createJob/items}" visible="false">
						<headerToolbar>
							<OverflowToolbar>
								<content>
									<Title text="Job Items" />
									<ToolbarSpacer />
									<Button text="Add" press="_addItem" type="Emphasized" />
									<Button text="Edit" press="_manageItems" type="Emphasized" />
								</content>
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="4em">
								<Text text="Item" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="11em">
								<Label required="true" text="Description" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="11em">
								<Label required="true" text="Sample" />
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="8em">
								<Label required="true" text="Test Parameter" />
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="8em">
								<Label required="true" text="Test Method" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{jobsModel>itemId}" />
									<TextArea value="{jobsModel>desc}" />
									<ComboBox items="{jobsModel>/lookups/samples}" change="_onSampleChange" placeholder="Select Sample" showSecondaryValues= "true" filterSecondaryValues="true">
										<core:ListItem key="{jobsModel>sampleId}" text="{jobsModel>sampleName}" additionalText="{jobsModel>sampleDesc}"/>
									</ComboBox>
									<ComboBox items="{jobsModel>/lookups/testParams}" change="_onTestParamChange" placeholder="Select Parameter" showSecondaryValues= "true" filterSecondaryValues="true">
										<core:ListItem key="{jobsModel>ParamId}" text="{jobsModel>ParamValue}" additionalText="{jobsModel>ParamDesc}"/>
									</ComboBox>
									<Input change="_onTestMethodChange" valueHelpOnly="true" showValueHelp="true" valueHelpRequest="_loadTestMethods" placeholder="Select Method">
									</Input>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button type="Accept" text="Create" press="onCreateSave" />
						<Button type="Reject" text="Cancel" />
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>